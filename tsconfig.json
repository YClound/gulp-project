{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "lib",
    "jsx": "preserve",
    "allowJs": true,
    "typeRoots": [
      "global.d.ts",
      "node_modules/@types",
    ],
  },
  "include": [
    "src/ts/*.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js"
  ],
  "compileOnSave": true
}